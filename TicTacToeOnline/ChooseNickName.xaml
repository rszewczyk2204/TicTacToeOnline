<ContentDialog
    x:Class="TicTacToeOnline.ChooseNickName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choose nickname"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="OK_Button_Clicked">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox x:Name="NickNameBox" AccessKey="NickNameBox"/>
        <TextBlock x:Name="FailedValidationTextBox" Text="Invalid nickname" Visibility="Collapsed"/>
    </StackPanel>
</ContentDialog>
