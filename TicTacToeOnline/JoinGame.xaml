<ContentDialog
    x:Class="TicTacToeOnline.JoinGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Join Game"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="OKButtonClicked">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Text="Enter ip and port to join your friend"/>
        <TextBox x:Name="IPPortText" PlaceholderText="XXXX.XXXX.XXXX.XXXX:XXXX" Margin="0 10 0 10"/>
        <TextBlock x:Name="FailedValidationIPPortConfiguration" Text="Invalid ip:port configuration" Visibility="Collapsed"/>
    </StackPanel>
</ContentDialog>
